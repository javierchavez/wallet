<div class="col-md-6 col-md-offset-3">

  <%= form_for(@transaction, :html => {:class => "form"}) do |f| %>

    <% if @transaction.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@transaction.errors.count, "error") %> prohibited this transaction from being saved:</h2>

        <ul>
          <% @transaction.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>


    <div class="form-group">
      <%= f.label :category %> 
      <%= f.collection_select :category_id, @categories, :id, :name, {}, {:class => "form-control"} %>
    </div>

    
    
    <div class="form-group">
      <%= f.label :name, :class => "sr-only"%>
      <%= f.text_field :name, :class => "form-control", :placeholder => "Dog food"%>
    </div>


    
    <div class="form-group">
      <%= f.label :amount, :class => "sr-only "%>
      <div class="input-group">
        <div class="input-group-addon">$</div>
        <%= f.text_field :amount, :class => "form-control", :placeholder => "1.99", :size=>5 %>
      </div>
    </div>

    
    <%= f.submit "Add", :class => "btn btn-default" %>


  <% end %>
  
</div>
